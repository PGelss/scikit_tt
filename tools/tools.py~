class Timer(object):
    def __init__(self, name=None):
        self.name = name

    def __enter__(self):
        self.tstart = _time.time()

    def __exit__(self, type, value, traceback):
        if self.name:
            print('%s: ' % self.name, end = '')
        print('%s s' % (_time.time() - self.tstart))